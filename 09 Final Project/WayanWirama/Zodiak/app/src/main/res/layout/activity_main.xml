<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_ikon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/zodiak" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_ikon"
        android:layout_centerHorizontal="true"
        android:inputType="textCapWords"
        android:hint="Nama Anda!" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin\t:"
        android:layout_below="@id/user_name"
        android:layout_centerHorizontal="true"
        android:id="@+id/tjk"/>
    <RadioGroup
        android:layout_width="200dp"
        android:id="@+id/jk"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tjk">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pria" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wanita" />
    </RadioGroup>


    <EditText
        android:id="@+id/tgl_lhr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/jk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:hint="Tanggal Lahir!"
        />

    <TextView
        android:id="@+id/tgl_lhr_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Umur"
        android:layout_below="@id/tgl_lhr"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tgl_lhr_lbl"
        android:layout_centerHorizontal="true">


        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="LOG IN" />


    </LinearLayout>


</RelativeLayout>