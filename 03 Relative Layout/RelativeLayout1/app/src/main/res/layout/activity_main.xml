<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/kotak_merah"
        android:layout_margin="10dp"
        android:background="#FFFD2828"
        android:layout_centerInParent="true"/>


    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/kotak-hijau"
        android:layout_margin="10dp"
        android:background="#FF25F209"
        android:layout_above="@id/kotak_merah"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/kotak_biru"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="#FF0428F4"
        android:layout_toRightOf="@id/kotak_merah"
        android:layout_centerInParent="true"/>


    <View
        android:id="@+id/kotak_kuning"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="#FFEAFA07"
        android:layout_toLeftOf="@id/kotak_merah"
        android:layout_centerInParent="true"/>


    <View
    android:id="@+id/kotak_ungu"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:background="#FFB404F4"
    android:layout_below="@id/kotak_merah"
    android:layout_centerInParent="true"/>





</RelativeLayout>
